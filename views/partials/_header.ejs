<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      
      <!--FORM IS HERE LOOKEE-->
      <div style="position: absolute; right: 0px; width: 300px; margin-top: 7px;">
        <% if (!username) {%>
          <form class="form-inline" action="/login" method="POST">
            <!--MUST POST TO /LOGIN-->
            <div class="form-group mb-2">
              <input class="form-control" type="text" name="username" placeholder="Username"
                style="width: 200px; margin: 0.5em" />
              <button type="submit" class="btn btn-outline-dark">Login</button>
            </div>
          </form>
          <% } else { %>
            <form class="form-inline" action="/logout" method="POST">
              <div class="form-group mb-2">
                <p style="width: 200px; margin: 0.5em; text-align: right;">Logged in as: <b><%= username %></b></p>
                  <button type="submit" class="btn btn-outline-dark">Logout</button>
              </div>
            </form>
            <% } %>
      </div>

    </div>
  </nav>
</header>